{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./app/types", "./convex/types"],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "*": ["./*"],
      "@convex/*": ["./convex/*"],
      "@convex/hooks/*": ["./convex/hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "convex/**/*.ts"]
}
